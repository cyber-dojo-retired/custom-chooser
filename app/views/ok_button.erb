<script>
'use strict';
$(() => {

  const post = (url) => {
    const form = $('<form>', {
      method: 'post',
      action: url
    });
    $('body').append(form);
    form.submit();
  };

  $('button#ok').click(() => {
    const raw_display_name = $('[id^=custom_][class~=selected]').data('name');
    const display_name = encodeURIComponent(raw_display_name);
    const url = `/custom/create_<%= @for %>?display_name=${display_name}`;
    post(url);
  });

});
</script>

<div id="button-box">
  <button type="button" id="ok">ok</button>
</div>
